<div class="container">
<h1><%= @list.name %> List</h1>
<%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-flat" %>
<ul>
  <% @movies.each do |movie| %>
  <div class="card-product">
    <img src="<%= movie.poster_url %>" alt="<%= movie.title %>" width= 200>
    <div class="card-product-infos">
      <h2><%= movie.title %></h2>
      <p><%= movie.overview %></p>
      <h2><%= movie.rating %></h2>
      <%= link_to "Remove from the list", bookmark_path(Bookmark.find_by(movie: movie, list: @list)), method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
</div>
  <% end %>
</ul>
</div>
